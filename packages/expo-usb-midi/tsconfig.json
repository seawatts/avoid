{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": false,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src"]
}
